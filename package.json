{
  "name": "file-packer",
  "displayName": "File Packer",
  "description": "File Packer is a simple yet powerful VS Code extension that helps you gather all your important project files into a single, shareable outputâ€”perfect for uploading to AI tools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-packer.exportFiles",
        "title": "File Packer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "file-packer.exportFiles",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
